{
  "npmClient": "yarn",
  "useWorkspaces": false,
  "packages": ["packages/cli", "packages/cli-mock", "packages/cli-utils", "packages/cli-webpack", "packages/cli-tools"],
  "version": "independent",
  "command": {
    "publish": {
      "registry": "https://registry.npmjs.org/",
      "message": "chore(release): publish"
    },
    "version": {
      "allowBranch": "main",
      "conventionalCommits": true,
      "createRelease": "github"
    }
  },
  "ignoreChanges": ["**/test/**", "**/*.md"]
}

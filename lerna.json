{
  "npmClient": "yarn",
  "useWorkspaces": false,
  "packages": [
    "packages/create-elux",
    "packages/cli",
    "packages/cli-init",
    "packages/cli-utils",
    "packages/cli-mock",
    "packages/cli-webpack",
    "packages/cli-demote",
    "packages/cli-ssg",
    "packages/cli-tpl"
  ],
  "version": "independent",
  "command": {
    "publish": {
      "registry": "https://registry.npmjs.org/",
      "message": "chore(release): publish"
    },
    "version": {
      "allowBranch": "main",
      "conventionalCommits": true,
      "createRelease": "github"
    }
  },
  "ignoreChanges": ["**/test/**", "**/*.md"]
}
